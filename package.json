{
  "name": "headless-wordpress-with-next",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-web": "(cd web && npm run build)",
    "build": "NODE_ENV=production run build --parallel",
    "dev": "NODE_ENV=development lerna run dev --parallel",
    "start": "NODE_ENV=production lerna run start --parallel",
    "deploy:now": "now",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "test": "NODE_ENV=test lerna run test --parallel",
    "test:ci": "NODE_ENV=test lerna run test:ci --parallel",
    "postinstall": "lerna bootstrap"
  },
  "main": "index.js",
  "author": "Taha Selim",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^3.16.4"
  },
  "engines": {
    "node": "^8.10.0 || ^10.13.0 || >=11.10.1"
  }
}